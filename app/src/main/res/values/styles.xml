<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="locationTitle">
        <item name="android:textSize">@dimen/LTTextsize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">@dimen/LTlayoutMargin</item>
    </style>

    <style name="listItemTextViewStyle">
        <item name="android:textSize">@dimen/LITtextsize</item>
        <item name="android:layout_marginRight">@dimen/LITLayoutMargin</item>
        <item name="android:layout_marginLeft">@dimen/LITLayoutMargin</item>
        <item name="android:layout_marginBottom">@dimen/LITLayoutMargin</item>
        <item name="android:drawablePadding">@dimen/LITLayoutMargin</item>
    </style>


    <style name="activityPlaceTextViewStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/APTpadding</item>
        <item name="android:textSize">@dimen/APTtextsize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/APTpadding</item>
    </style>

    <style name="tabs">
        <item name="tabBackground">@color/colorPrimary</item>
        <item name="tabIndicatorColor">@color/colorAccent</item>
        <item name="tabSelectedTextColor">@color/colorAccent</item>
        <item name="tabTextAppearance">@style/tabsText</item>
    </style>

    <style name="tabsText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#FFFFFF</item>
    </style>

</resources>